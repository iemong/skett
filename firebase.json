{
    "hosting": {
        "public": "out",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/s/**",
                "function": "ogpPage"
            },
            {
                "source": "/posts/**",
                "destination": "/posts/[postId].html"
            }
        ]
    },
    "functions": {
        "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint", "npm --prefix \"$RESOURCE_DIR\" run build"]
    }
}
