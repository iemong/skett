{
    "hosting": {
        "public": "out",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/login/**",
                "destination": "/login.html"
            },
            {
                "source": "/register/**",
                "destination": "/register/index.html"
            },
            {
                "source": "/mypage/**",
                "destination": "/mypage.html"
            },
            {
                "source": "/s/**",
                "function": "ogpPage"
            }
        ]
    },
    "functions": {
        "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint", "npm --prefix \"$RESOURCE_DIR\" run build"]
    }
}
