{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./node_modules/@types"],
        "resolveJsonModule": true
    },
    "compileOnSave": true,
    "include": ["src"]
}
